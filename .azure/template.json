{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "String"
    },
    "youtube_key": {
      "type": "String"
    },
    "facebook_key": {
      "type": "String"
    },
    "streaming_key": {
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "name": "[parameters('name')]",
      "location": "eastus2",
      "properties": {
        "containers": [
          {
            "name": "[parameters('name')]",
            "properties": {
              "image": "mniak/multistreamer",
              "ports": [
                {
                  "protocol": "TCP",
                  "port": 1935
                }
              ],
              "environmentVariables": [
                {
                  "name": "YOUTUBE_URL",
                  "value": "rtmp://a.rtmp.youtube.com/live2"
                },
                {
                  "name": "YOUTUBE_KEY",
                  "value": "[parameters('youtube_key')]"
                },
                {
                  "name": "FACEBOOK_KEY",
                  "value": "[parameters('facebook_key')]"
                },
                {
                  "name": "STREAMING_KEY",
                  "value": "[parameters('streaming_key')]"
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": 1.5,
                  "cpu": 1
                }
              }
            }
          }
        ],
        "restartPolicy": "OnFailure",
        "ipAddress": {
          "ports": [
            {
              "protocol": "TCP",
              "port": 1935
            }
          ],
          "type": "Public",
          "dnsNameLabel": "[parameters('name')]"
        },
        "osType": "Linux"
      }
    }
  ]
}